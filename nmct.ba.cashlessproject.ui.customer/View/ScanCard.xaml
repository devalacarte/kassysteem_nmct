<UserControl x:Class="nmct.ba.cashlessproject.ui.customer.View.ScanCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <GroupBox Header="Identificeer klant">

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Scan je kaart met de EID-lezer" TextAlignment="Center" HorizontalAlignment="Stretch" Margin="5"/>
                <TextBlock Text="{Binding Error}" TextAlignment="Center" HorizontalAlignment="Stretch" Margin="5"/>
            </StackPanel>

        </GroupBox>
    </Grid>
</UserControl>
